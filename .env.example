# Shopify App Store Credentials (REQUIRED)
# Get these from: https://partners.shopify.com → Your App → Settings → Client credentials
SHOPIFY_API_KEY=your-api-key-here
SHOPIFY_API_SECRET=your-api-secret-here
SHOPIFY_REDIRECT_URI=https://your-app-url.onrender.com/auth/callback
SHOPIFY_APP_URL=https://your-app-url.onrender.com

# Security (REQUIRED)
SECRET_KEY=your-secret-key-here-minimum-32-characters
ENCRYPTION_KEY=your-encryption-key-here-minimum-32-characters
JWT_SECRET_KEY=your-jwt-secret-key-here

# Environment
ENVIRONMENT=production
FLASK_ENV=production
DEBUG=false

# Database (REQUIRED for production)
DATABASE_URL=postgresql://user:password@host:port/database

# Billing (Shopify Billing API - REQUIRED for embedded apps)
STRIPE_PUBLIC_KEY=your-stripe-public-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Email Service
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@your-app-domain.com

# Error Monitoring (Recommended)
SENTRY_DSN=your-sentry-dsn-here
SENTRY_ENVIRONMENT=production

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://localhost:6379/0
RATELIMIT_DEFAULT=100 per hour

# Performance (Optional)
CACHE_TYPE=redis
CACHE_REDIS_URL=redis://localhost:6379/1
CACHE_DEFAULT_TIMEOUT=300

# File Upload
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216
