# Local Development Environment Variables
# Copy this to .env and fill in your values

# Database (Docker PostgreSQL)
DATABASE_URL=postgresql://devuser:devpass123@db:5432/missioncontrol_dev

# Flask
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=dev-secret-key-change-in-production

# Shopify App (Required - get from Shopify Partners Dashboard)
SHOPIFY_API_KEY=your_shopify_api_key_here
SHOPIFY_API_SECRET=your_shopify_api_secret_here
SHOPIFY_APP_HANDLE=employee-suite-7
SHOPIFY_SCOPES=read_products,write_products,read_orders,write_orders,read_customers

# SendGrid (Optional for local dev)
SENDGRID_API_KEY=

# Stripe (Optional for local dev)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=

# Redis (Optional)
REDIS_URL=redis://redis:6379/0
